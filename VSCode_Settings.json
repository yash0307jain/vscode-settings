{
    "editor.fontSize": 16,
    "editor.fontWeight": "bold",
    "editor.fontFamily": "Operator Mono Lig, Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // "terminal.integrated.fontWeight": "bold",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.iconTheme": "material-icon-theme",
    "prettier.tabWidth": 4,
    "[dart]": {
        "editor.formatOnSave": true
        // "editor.defaultFormatter": "Dart-Code.dart-code"
    },
    "workbench.editor.enablePreview": true,
    "C_Cpp.updateChannel": "Insiders",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    // my custom theme
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#1b1b1b",
        "menu.background": "#1b1b1b",
        "quickInput.background": "#1b1b1b",
        "sideBar.background": "#1b1b1b",
        "panel.background": "#1b1b1b",
        "statusBar.background": "#1b1b1b",
        "tab.border": "#1b1b1b",
        "tab.inactiveBackground": "#1b1b1b",
        "activityBar.background": "#1b1b1b",
        "terminal.background": "#1b1b1b",
        "editorGroupHeader.tabsBackground": "#1b1b1b",

        "editor.selectionBackground": "#1a3e6b",

        "editor.lineHighlightBackground": "#2c2c2c",

        "editor.background": "#222121", //"#131212",
        "editorGutter.background": "#222121",
        "tab.activeBackground": "#222121",

        "editorCursor.foreground": "#ffffff",
        "tab.activeBorderTop": "#ffffff"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    }
}
