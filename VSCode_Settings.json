{
    "editor.fontWeight": "bold",
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "workbench.iconTheme": "material-icon-theme",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.tabSize": 4,
    "prettier.tabWidth": 4,
    "[python]": {
        "editor.defaultFormatter": null
    },
    "python.formatting.blackArgs": ["--line-length", "120"],
    "python.formatting.provider": "black",
    "diffEditor.ignoreTrimWhitespace": false,
    "window.commandCenter": true,

    // my custom theme
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#1b1b1b",
        "menu.background": "#1b1b1b",
        "quickInput.background": "#1b1b1b",
        "sideBar.background": "#1b1b1b",
        "panel.background": "#1b1b1b",
        "statusBar.background": "#1b1b1b",
        "tab.border": "#1b1b1b",
        "tab.inactiveBackground": "#1b1b1b",
        "activityBar.background": "#1b1b1b",
        "terminal.background": "#1b1b1b",
        "editorGroupHeader.tabsBackground": "#1b1b1b",

        "editor.selectionBackground": "#1a3e6b",

        "editor.lineHighlightBackground": "#2c2c2c",

        "editor.background": "#292929", //"#131212", "#222121"
        "editorGutter.background": "#292929",
        "tab.activeBackground": "#292929",
        "list.inactiveSelectionBackground": "#292929",
        // "sideBar.foreground": "#aeaeae",
        // "list.inactiveSelectionForeground": "#ffffff",
        // "list.inactiveFocusOutline": "#434343",

        "editorCursor.foreground": "#ffffff",
        "tab.activeBorderTop": "#ffffff"
    }
}
